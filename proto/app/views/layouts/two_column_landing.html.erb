  <!--[if IE 8]> <html class="no-js lt-ie9" lang="en"> <![endif]-->
  <!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">

  <%= yield :head %>

  <body class="tcl">
    <div class="ca-root"> <!-- root element required for sticky footer -->
      
      <%= yield :header %>
      <%#= yield :hero %>
      
      <section class="page-hero">
        <div class="row page-hero-container">
          <div class="eight columns offset-by-four page-headline-container">
            <h1 class="page-headline">Cash America Headline</h1>

            <ul class="breadcrumbs">
              <li>
                <a href="#">Example 1</a></li>
              
              <li>
                <a href="#">Example 2</a></li>
              
              <li class="unavailable">
                <a href="#">Example 3</a></li>
              
              <li class="current">
                <a href="#">Here</a></li>
            </ul>
          </div>
        </div>
      </section>

      <section class="row"> <!-- Main Page Content and Sidebar -->
        <!-- Sidebar -->
        <aside class="four columns side-bar">
          <div class="side-bar-container">

            <%= yield :widget_store_locator %>

          </div>
        </aside> <!-- End Sidebar -->
        

        
        <main class="eight columns main-body" role="content"> <!-- Main Content -->
          <article>
            
            <%= yield :main_content %>

          </article>
        </main><!-- End Main Content -->
      </section>
    
      <div class="ca-root-footer"></div>  <!-- Need this elementfor the sticky footer -->
    </div>     <!-- End root for sticky footer -->

    <%= yield :footer %>


  </body>
</html>
